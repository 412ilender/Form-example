// IMPORT

@import "variables.styl"


// BASE STYLES

*
	margin 0
	padding 0
	box-sizing border-box
html
	font-size base-font-size

html, body
	height 100%

body
	-webkit-font-smoothing antialiased

body,
textarea
	font-family "Open Sans", "sans-serif"
	font-size 1.6rem
	color font-color


// STYLES

.container
	display block
	width 90%
	height 100%
	margin 0 auto

.form-description
	margin 30px 0
	text-align center
	font-size form-name-small
	font-weight 300
	@media screen and (min-width 360px)
		font-size form-name
.form
	display block
	position relative
	width 100%
	max-width 600px
	margin 0 auto
	input[type="text"],
	input[type="mail"],
	textarea
		background-color white
	// special styles for disable yellow background-color added by webkit autofill
	input:-webkit-autofill
		background-color white !important
		box-shadow: 0 0 0px 1000px white inset !important
	// overwrite default focus effect (blue outline)
	input[type="text"]:focus,
	input[type="email"]:focus,
	textarea:focus
		border-color border-focus-color
		box-shadow 0 0 5px rgba(44, 151, 222, 0.2)
		outline none
	.error-wrap,
	.field-wrap,
	.submit-wrap,
	.form-input
		width 100%
	.field-wrap
		position relative
		margin 24px 0
		&:nth-of-type(1):after,
		&:nth-of-type(3):after,
		&:nth-of-type(4):after,
		&:nth-of-type(6):after
			display block
			content ""
			position absolute
			top 12px
			right 17px
			width 4px
			height 4px
			border-radius 50%
			background-color orange
			z-index 1000
		@media screen and (min-width 360px)
			margin 28px 0
	.form-input
		padding 12px 16px 12px 54px
		border 1px solid border-normal-color
		box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.08)
		border-radius 3px
		font-size input-font-size - 0.2
		@media screen and (min-width 360px)
			padding 16px 16px 16px 54px
			font-size input-font-size
	// we have to use special elements in html for icons, instead of
	// backgrounds images coz webkit autofill adds yellow image in base 64
	// to every filled input and that image owerwrite icons
	.icon
		display block
		position absolute
		width 24px
		height 24px
		top 0
		bottom 0
		margin auto 0
		left 17px
		fill: icons-color;
		z-index 1000
	.icon.write
		top 16px
		margin 0
	.error-wrap
		background-color orange
		text-align center
		padding 16px
		margin-bottom 10px
		color white
	.form-message
		resize none
		margin-bottom 70px
		overflow hidden
	.submit-wrap
		position relative
		input
			display block
			position absolute
			bottom 0
			right 0
			padding 15px 60px
			font-family inherit
			font-size inherit
			font-weight bold
			color white
			background-color blue
			border none
			border-radius 3px
			cursor pointer
			&:hover
				background-color light-blue
			&:active
				transform scale(0.9)
	.form-label
		position absolute
		left 57px
		top 11px
		transition left .2s, top .2s
		font-size label-font-size - 0.2
		color labels-color
		z-index 10
		@media screen and (min-width 360px)
			top 16px
			font-size label-font-size
	.form-label-small
		position absolute
		left 0
		top -17px
		transition left .2s, top .2s
		color labels-color
		z-index 10
		@media only screen and (-webkit-min-device-pixel-ratio: 3) and (min-resolution: 192dpi)
			top -18px
	.error-msg,
	.form-label-small,
	.msg-length
		font-size label-small-font-size - 0.1
		@media screen and (min-width 360px)
			font-size label-small-font-size
		@media only screen and (-webkit-min-device-pixel-ratio: 3) and (min-resolution: 192dpi)
			font-size label-small-font-size + 0.25
	.error-msg
		position absolute
		top -17px
		right 0
		color orange
		@media only screen and (-webkit-min-device-pixel-ratio: 3) and (min-resolution: 192dpi)
			top -18px
	.error
		// import using for owerwrite blue border that
		// used as replacement for default outline for focus
		border 1px solid border-error-color !important
		box-shadow none !important
	.valid
		border 1px solid border-valid-color !important
		box-shadow none !important
	// styles for message-length elements
	.msg-length
		position absolute
		top -17px
		right 0
