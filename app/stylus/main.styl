// IMPORT

@import "variables.styl"


// BASE STYLES

*
	margin 0
	padding 0
	box-sizing border-box

html, body
	height 100%

body
	-webkit-font-smoothing antialiased


// STYLES

.container
	display block
	width 90%
	height 100%
	margin 0 auto

.form-description
	margin 30px 0
	text-align center
	font-size 2em

.form
	display block
	position relative
	width 100%
	max-width 600px
	margin 0 auto
	color font-color
	input[type="text"],
	input[type="mail"],
	textarea
		background-color white
	// special styles for disable yellow background-color added by webkit autofill
	input:-webkit-autofill
		background-color white !important
		box-shadow: 0 0 0px 1000px white inset !important
	// overwrite default focus effect (blue outline)
	input[type="text"]:focus,
	input[type="email"]:focus,
	textarea:focus
		border-color border-focus-color
		box-shadow 0 0 5px rgba(44, 151, 222, 0.2)
		outline none
	.error-wrap,
	.field-wrap,
	.submit-wrap,
	.form-input
		width 100%
	.field-wrap
		position relative
		margin 28px 0
		textarea
			font-size 1.5em
	.form-input
		padding 16px 16px 16px 54px
		border 1px solid border-normal-color
		box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.08)
		border-radius 3px
		font-size main-form
	// we have to use special elements in html for icons, instead of
	// backgrounds images coz webkit autofill adds yellow image in base 64
	// to every filled input and that image owerwrite icons
	.icon
		display block
		position absolute
		width 24px
		height 24px
		top 16px
		left 17px
		fill: icons-color;
		z-index 1000
	.required
		display block
		position absolute
		width 4px
		height 4px
		top 12px
		right 17px
		border-radius 50%
		background-color orange
		z-index 1000
	.error-wrap
		background-color orange
		text-align center
		padding 16px
		margin-bottom 10px
		color white
	.form-message
		resize none
		margin-bottom 70px
	.submit-wrap
		position relative
		input
			display block
			position absolute
			bottom 0
			right 0
			padding 15px 60px
	.error-msg
		position absolute
		top -19px
		right 0
		font-size form-helpers
		color orange
	.form-label
		position absolute
		left 57px
		top 19px
		transition left .2s, top .2s
		font-size main-form
		z-index 10
	.form-label-small
		position absolute
		left 0
		top -19px
		transition left .2s, top .2s
		font-size form-helpers
		z-index 10
	.error
		// import using for owerwrite blue border that
		// used as replacement for default outline for focus
		border 1px solid border-error-color !important
		box-shadow none !important
	.valid
		border 1px solid border-valid-color !important
		box-shadow none !important
	// styles for message-length elements
	.msg-length
		position absolute
		top -19px
		right 0
		font-size form-helpers
